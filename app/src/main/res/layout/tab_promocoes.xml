<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cardapioOnline.activitys.CardapioMainActivity">

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:progressTint="@color/colorPrimary"
        android:visibility="gone"
        android:theme="@style/MyProgressbarColor"
        android:id="@+id/progressbar_promocoes" />

    <TextView
        android:id="@+id/textTabItemPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Promoções de hoje"
        android:textSize="17sp" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/textTabItemPromo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_itens_promo">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:progressTint="@color/colorPrimary"
        android:theme="@style/MyProgressbarColor"
        android:id="@+id/progressbar_itens_promo" />

</RelativeLayout>
