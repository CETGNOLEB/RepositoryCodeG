<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_pag_dinheiro"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_frm_pagamento"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_money" />

        <RelativeLayout
            android:id="@+id/layout_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_frm_pagamento">

            <TextView
                android:id="@+id/nome_frm_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="DINHEIRO E CARTÃƒO"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/desc_frm_pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nome_frm_pagamento"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:paddingTop="2dp"
                android:visibility="gone"
                android:text="" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/cheked_frm_pagamento"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_check" />

    </RelativeLayout>

</android.support.v7.widget.CardView>