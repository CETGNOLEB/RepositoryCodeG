<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_pedido_realizado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/header_card_pedido_realizado"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/numero_pedido_realizado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Pedido Nº 4687"
                    android:textColor="#212121"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/data_pedido_realizado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Data: 29/03/2017" />

                <TextView
                    android:id="@+id/hora_pedido_realizado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Hora: 20:38" />

                <TextView
                    android:id="@+id/entrega_pedido_realizado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Entrega em Domicílio" />

                <TextView
                    android:id="@+id/valor_pedido_realizado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Valor Total: R$ 10,00" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/line_card_pedidos_ralizados"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/header_card_pedido_realizado"
            android:layout_marginTop="10dp"
            android:background="#c6c6c6">
        </View>

        <RelativeLayout
            android:layout_below="@+id/line_card_pedidos_ralizados"
            android:layout_width="match_parent"
            android:layout_height="35dp">


            <TextView
                android:id="@+id/status_pedido_realizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_pedido_realizado"
                android:paddingLeft="10dp"
                android:text="ENVIADO"
                android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_pedido_realizado"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/img_pedido_enviado"/>

            <TextView
                android:id="@+id/detalhes_pedido_realizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:text="DETALHES"/>

        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>