<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_itens_do_pedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/text_itens_pedido"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:layout_toRightOf="@+id/item_img"
            android:layout_toEndOf="@+id/item_img">

            <TextView
                android:id="@+id/item_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="AÃ§ai 300ml"
                android:layout_toLeftOf="@+id/item_qtd"
                android:layout_centerVertical="true"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/item_qtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_valor"
                android:text="2 x"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/item_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="R$ 8,00"
                android:textSize="17sp"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>